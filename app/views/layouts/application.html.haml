%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Proyecto
    %meta{:content => "width=device-width,initial-scale=1", :name => "viewport"}/
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag "application", "data-turbo-track": "reload"
    = javascript_importmap_tags
    = stylesheet_link_tag "style.css"

%body
  / ======= Header =======
  %header#header.header.fixed-top.d-flex.align-items-center
    .d-flex.align-items-center.justify-content-between
      %a.logo.d-flex.align-items-center{href: "index.html"}
        %img{alt: "", src: "assets/images/logo.png"}/
        %span.d-none.d-lg-block Pedidos Express
      %i.bi.bi-list.toggle-sidebar-btn
    / End Logo
    .search-bar
      %form.search-form.d-flex.align-items-center{action: "/search", method: "search"}
        %input{name: "data", placeholder: "Search", title: "Buscar Usuarios", type: "text"}/
        %button{title: "Search", type: "submit"}
          %i.bi.bi-search
    / End Search Bar
    %nav.header-nav.ms-auto
      %ul.d-flex.align-items-center
        %li.nav-item.d-block.d-lg-none
          %a.nav-link.nav-icon.search-bar-toggle{href: "#"}
            %i.bi.bi-search
        / End Search Icon
        %li.nav-item.dropdown
          %a.nav-link.nav-icon{"data-bs-toggle" => "dropdown", href: "#"}
            %i.bi.bi-bell
          / End Notification Icon
          %ul.dropdown-menu.dropdown-menu-end.dropdown-menu-arrow.notifications
            %li.dropdown-header
              %a{href: "#"}
                %span.badge.rounded-pill.bg-primary.p-2.ms-2 View all
            %li
              %hr.dropdown-divider/
            %li.notification-item
              %i.bi.bi-exclamation-circle.text-warning
            %li
              %hr.dropdown-divider/
            %li.notification-item
              %i.bi.bi-x-circle.text-danger
              %div
            %li
              %hr.dropdown-divider/
            %li.notification-item
              %i.bi.bi-check-circle.text-success
            %li
              %hr.dropdown-divider/
            %li.notification-item
              %i.bi.bi-info-circle.text-primary
              %div
            %li
              %hr.dropdown-divider/
            %li.dropdown-footer
              %a{href: "#"} Show all notifications
          / End Notification Dropdown Items
        / End Notification Nav
        %li.nav-item.dropdown
          %a.nav-link.nav-icon{"data-bs-toggle" => "dropdown", href: "#"}
            %i.bi.bi-chat-left-text
          / End Messages Icon
          %ul.dropdown-menu.dropdown-menu-end.dropdown-menu-arrow.messages
            %li.dropdown-header
              %a{href: "#"}
                %span.badge.rounded-pill.bg-primary.p-2.ms-2 View all
            %li
              %hr.dropdown-divider/
            %li.message-item
              %a{href: "#"}
                %div
            %li
              %hr.dropdown-divider/
            %li.message-item
              %a{href: "#"}
            %li
              %hr.dropdown-divider/
            %li.message-item
              %a{href: "#"}
            %li
              %hr.dropdown-divider/
            %li.dropdown-footer
              %a{href: "#"} Show all messages
          / End Messages Dropdown Items
        / End Messages Nav
        %li.nav-item.dropdown.pe-3
          %a.nav-link.nav-profile.d-flex.align-items-center.pe-0{"data-bs-toggle" => "dropdown", href: "#"}
          / End Profile Iamge Icon
          %ul.dropdown-menu.dropdown-menu-end.dropdown-menu-arrow.profile
            %li.dropdown-header
              %span Web Designer
            %li
              %hr.dropdown-divider/
            %li
              %a.dropdown-item.d-flex.align-items-center{href: "users-profile.html"}
                %i.bi.bi-person
                %span My Profile
            %li
              %hr.dropdown-divider/
            %li
              %a.dropdown-item.d-flex.align-items-center{href: "users-profile.html"}
                %i.bi.bi-gear
                %span Account Settings
            %li
              %hr.dropdown-divider/
            %li
              %a.dropdown-item.d-flex.align-items-center{href: "pages-faq.html"}
                %i.bi.bi-question-circle
                %span Need Help?
            %li
              %hr.dropdown-divider/
            %li
              %a.dropdown-item.d-flex.align-items-center{href: "#"}
                %i.bi.bi-box-arrow-right
                %span Sign Out
          / End Profile Dropdown Items
        / End Profile Nav
    / End Icons Navigation
  / End Header
